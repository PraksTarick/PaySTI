<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.system.controller.TuitionBalanceController" prefHeight="600.0" prefWidth="900.0">
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: #ecf0f1; -fx-border-color: #ecf0f1;">
            <content>
                <StackPane>
