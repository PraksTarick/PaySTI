                                    <!-- Midterms -->
                                    <Label text="Midterms" textFill="#666" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                    <Label fx:id="midtermsLabel" text="â‚±9,500.00" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                    <Label fx:id="midtermsStatusLabel" text="Unpaid" textFill="#e74c3c" style="-fx-font-weight: bold;" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                                    
