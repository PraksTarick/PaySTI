                                <effect>
                                    <DropShadow radius="5" offsetY="2">
                                        <color>
                                            <Color opacity="0.2" />
                                        </color>
                                    </DropShadow>
                                </effect>
                                <Label text="Balance Summary" style="-fx-font-weight: bold;">
                                    <font>
                                        <Font size="18.0" />
