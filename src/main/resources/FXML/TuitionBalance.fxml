                                    <Label text="Student ID:" textFill="#666" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                    <Label fx:id="studentIdLabel" text="2021-000003" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                    
                                    <Label text="Email:" textFill="#666" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                                    <Label fx:id="emailLabel" text="pedro.cruz@sti.edu" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="4" />
