                                    <Label text="Finals" textFill="#666" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                                    <Label fx:id="finalsLabel" text="â‚±9,500.00" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="4" />
