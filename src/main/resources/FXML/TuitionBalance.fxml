                                    </columnConstraints>
                                    
                                    <!-- Semester and School Year -->
                                    <Label text="Semester:" textFill="#666" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                    <Label fx:id="semesterLabel" text="1st Semester" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                    
                                    <Label text="School Year:" textFill="#666" GridPane.columnIndex="0" GridPane.rowIndex="1" />
