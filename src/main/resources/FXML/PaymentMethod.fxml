<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.system.controller.PaymentMethodController" prefHeight="600.0" prefWidth="900.0">
    <center>
        <StackPane>
            <ImageView fitHeight="600.0" fitWidth="900.0" opacity="0.1" preserveRatio="false">
                <image>
                    <Image url="/images/sti-logo.png" />
                </image>
            </ImageView>
            <VBox spacing="0">
                <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #1e88e5; -fx-padding: 15;">
                    <children>
                        <Button text="â† Back" onAction="#handleBack" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-cursor: hand; -fx-font-size: 14; -fx-padding: 8 15 8 15;" />
                        <Label text="Select Payment Method" textFill="white" style="-fx-font-weight: bold;">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
                <VBox alignment="CENTER" spacing="40.0" style="-fx-padding: 60; -fx-background-color: #ecf0f1;" VBox.vgrow="ALWAYS">
                    <Label text="Choose your preferred payment method" style="-fx-font-size: 18; -fx-text-fill: #666;" />
                    
                    <HBox spacing="40.0" alignment="CENTER">
                        <!-- GCash Payment Option -->
                        <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 40; -fx-cursor: hand;" 
                              onMouseEntered="#handleGCashHover" onMouseExited="#handleGCashExit" onMouseClicked="#handleGCashPayment" prefWidth="300.0" prefHeight="350.0">
                            <effect>
                                <DropShadow radius="10" offsetY="3">
                                    <color>
                                        <Color opacity="0.3" />
                                    </color>
                                </DropShadow>
                            </effect>
                            
                            <!-- GCash Logo Placeholder -->
                            <StackPane style="-fx-background-color: #007dff; -fx-background-radius: 20;" prefWidth="120" prefHeight="120">
                                <Label text="G" textFill="white" style="-fx-font-size: 60; -fx-font-weight: bold;" />
                            </StackPane>
                            
                            <Label text="GCash" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #007dff;">
                            </Label>
                            
                            <Label text="Pay securely using your GCash wallet" textAlignment="CENTER" wrapText="true" textFill="#666" style="-fx-font-size: 14;">
                            </Label>
                            
                            <Button text="Select GCash" onAction="#handleGCashPayment" style="-fx-background-color: #007dff; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 12 30 12 30; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-weight: bold;">
                            </Button>
                        </VBox>
                        
                        <!-- goTyme Payment Option -->
                        <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 40; -fx-cursor: hand;" 
                              onMouseEntered="#handleGoTymeHover" onMouseExited="#handleGoTymeExit" onMouseClicked="#handleGoTymePayment" prefWidth="300.0" prefHeight="350.0">
                            <effect>
                                <DropShadow radius="10" offsetY="3">
                                    <color>
                                        <Color opacity="0.3" />
                                    </color>
                                </DropShadow>
                            </effect>
                            
                            <!-- goTyme Logo Placeholder -->
                            <StackPane style="-fx-background-color: #00d4aa; -fx-background-radius: 20;" prefWidth="120" prefHeight="120">
                                <Label text="T" textFill="white" style="-fx-font-size: 60; -fx-font-weight: bold;" />
                            </StackPane>
                            
                            <Label text="goTyme" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #00d4aa;">
                            </Label>
                            
                            <Label text="Pay using your goTyme bank account" textAlignment="CENTER" wrapText="true" textFill="#666" style="-fx-font-size: 14;">
                            </Label>
                            
                            <Button text="Select goTyme" onAction="#handleGoTymePayment" style="-fx-background-color: #00d4aa; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 12 30 12 30; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-weight: bold;">
                            </Button>
                        </VBox>
                    </HBox>
                    
                    <Label text="ðŸ’³ All payments are secure and encrypted" style="-fx-font-size: 13; -fx-text-fill: #999;" />
                </VBox>
            </VBox>
        </StackPane>
    </center>
</BorderPane>